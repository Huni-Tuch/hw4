<div class="container">
<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>

<div class="row">
  
      <% for post in @posts %>
        <div class="col-md-6 col-lg-3">
          <h3><%= post["title"] %></h3>
          <p><%= post["posted_on"] %></p>
          <p><%= post["description"] %></p>
        </div>
      <% end %>
  </div>
      

      <p>
        <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
      </p>

      <p>
        <a href="/places">Back to All Places</a>
      </p>

</div>

