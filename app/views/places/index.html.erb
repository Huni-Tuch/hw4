<h1>Places</h1>

<ul>
  
  <% if @current_user %>  
      <% for place in @places %>
        <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
      <% end %>
    <% else %>
      <% cookies[:non_user] = "non_user" %>
      <% for place in @places %>
        <li><a href="/no_user"><%= place["name"] %></a></li>
      <% end %>
    <% end %>
</ul>

<p>
  <% if @current_user %>
  <a href="/places/new">New place</a>
  <% end %>
</p>

