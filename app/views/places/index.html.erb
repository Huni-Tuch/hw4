<div class="container">
<h1>Places</h1>

<% if @places.all.count == 0 %>
  <% if @current_user %>
    <p>There are no places yet, <a href="/places/new">create</a> the first one!</p>
  <% else %>
    <p>There are no places yet, <a href="/users/new">sign up</a> to create the first one!</p>
  <% end %>

<% else %>

  <ul>
    <% if @current_user %>  
        <% for place in @places %>
          <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
        <% end %>
      <% else %>
          <% for place in @places %>
          <li><a href="/no_user"><%= place["name"] %></a></li>
        <% end %>
      <% end %>
  </ul>
  
<% end %>

  <p>
    <% if @current_user %>
    <a href="/places/new">New place</a>
    <% end %>
  </p>

</div>